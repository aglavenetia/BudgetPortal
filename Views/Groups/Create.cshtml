@model BudgetPortal.Entities.BudgetGroups

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BudgetGroups</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupNo" class="control-label"></label>
                <input asp-for="GroupNo" class="form-control" />
                <span asp-validation-for="GroupNo" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="SectionNo" class="control-label"></label>
                <select asp-for="SectionNo" class ="form-control" asp-items="ViewBag.SectionNo"></select>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div><br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Groups" asp-route-Sectionid="@ViewData["SectionID"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
