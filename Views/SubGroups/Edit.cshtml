@model BudgetPortal.Entities.BudgetSubGroups

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BudgetSubGroups</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubGroupNo" />
            
            <div class="form-group">
                <label asp-for="subGroupName" class="control-label"></label>
                <input asp-for="subGroupName" class="form-control" />
                <span asp-validation-for="subGroupName" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="GroupNo" class="control-label"></label>
                <select asp-for="GroupNo" class="form-control" asp-items="ViewBag.GroupNo"></select>
                <span asp-validation-for="GroupNo" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="RequireInput" class="control-label">Does the Ledgers require Input ?</label><br />
                <input type="radio" asp-for="RequireInput" value="true" id="true" /> True <br />
                <input type="radio" asp-for="RequireInput" value="false" id="false"/> False <br />
            </div> <br />
            <div class="form-group">
                <label asp-for="CreatedDateTime" class="control-label"></label>
                <input asp-for="CreatedDateTime" class="form-control" readonly="readonly" />
                <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div><br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="SubGroups" asp-route-Groupid="@ViewData["GroupId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
