@model IEnumerable<BudgetPortal.Entities.SectionDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SectionNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SectionNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SectionNo">Delete</a>
                <a asp-controller="SectionDetail" asp-action="Index" asp-route-SectionNo="@item.SectionNo">Update Groups</a>
            </td>
        </tr>
}
    </tbody>
</table>
